<!DOCTYPE html>
<html lang="es">
<!-- Head -->
<%- include('../partials/head.ejs', {title: 'Edición de productos'}) %>
<!-- /Head -->

<body>
	<!-- Header -->
	<%- include('../partials/header.ejs') %>
	<!-- /Header -->

	<div class="linea"></div>

	<!-- Div (Edit) -->
	<div class="container-products-wrapper">

		<!-- Form (Edit) enctype="multipart/form-data" -->
		<div class="form-crud-wrap">
			<form action="/products/productEditForm/<%= productDatos.id %>" method="POST"  enctype="multipart/form-data">
				<fieldset>
					<legend> Modificar Producto: </legend>
					<div class="media-linea"></div>
					<div class="row-product-detail">
						<div class="form-crud form-crud-m1">
							<label for="name" class="form-label">Nombre del producto:</label>
							<input type="text" id="name" name="name" value="<%= productDatos.name %>" class="form-input">
						</div>
						<div class="form-crud form-crud-m2">
							<label for="price" class="form-label">Precio:</label>
							<input type="number" id="price" name="price" value=<%= parseInt(productDatos.price) %> class="form-input">
						</div>
					</div>	
					<div class="row-product-detail">
						<div class="form-crud form-crud-m3">
							<label for="discount" class="form-label">Descuento:</label>
							<input type="number" id="discount" name="discount" value=<%= parseInt(productDatos.discount) %> class="form-input">
						</div>
						<div class="form-crud form-crud-m3">
							<label for="stock" class="form-label">Stock:</label>
							<input type="number" id="stock" name="stock" value=<%= parseInt(productDatos.stock) %> class="form-input">
						</div>
						<div class="form-crud form-crud-m3">
							<label for="category" class="form-label">Categoría:</label>
							<select name="category" id="category" class="form-input">
								<option value="<%= productDatos.category %>"><%= productDatos.category %></option>
								<option value="PC Componentes">PC Componentes</option>
								<option value="Periféricos">Periféricos</option>
								<option value="Notebooks">Notebooks</option>
								<option value="Monitores">Monitores</option>
								<option value="Audio">Audio</option>
							</select>
						</div>
					</div>
					<div class="linea"></div>
					<div class="row-product-detail">
						<div class="form-crud form-crud-md">
							<label for="promo" class="form-label">En Promoción?</label>
							<select name="promo" id="promo" class="form-input">
								<option value="<%= productDatos.promo %>">Elegir... (o va Últimos agregados)</option>
								<option value="offer">Ofertas</option>
								<option value="last">Últimos agregados</option>
							</select>
							<div class="linea"></div>
							<div class="linea"></div>
							<label for="description" class="form-label">Descripción:</label>
							<textarea name="description" id="description" class="form-input" value="<%= productDatos.description %>"><%= productDatos.description %></textarea>
							<div class="linea"></div>
							<div class="linea"></div>
							<label for="image" class="form-label">Foto del producto:</label>
							<input type="file" name="image" id="seleccionArchivos" accept="image/*">
						</div>
						<div class="form-crud form-crud-md">
							<div class="img-detail">
								<div class="media-linea"></div>

                                <!-- La imagen que vamos a usar para previsualizar -->
                                <img id="imagenPrevisualizacion" src="/images/products/<%= productDatos.image %>" alt="Imagen" class="product_img">
                                    <!-- script -->
                                    <%- include('../partials/preview_ed.ejs') %>
                                    <!-- /script -->

                                <div class="media-linea"></div>
							</div>	
						</div>
					</div>
				</fieldset>	

				<div class="linea"></div>
				<div class="linea"></div>

				<!-- ■ Botones -->
                <div class="buttons-block" id="but">
					<!-- ■ Botón de enviar que nos lleve a la página principal -->
                    <button class="button-form" type="submit" id="ok">Guardar modificaciones</button>

                    <div class="linea"></div>

					<!-- ■ Botón de borrar todos los datos del formulario -->
                    <button class="button-form" type="button" onclick="window.location.href='/products/productDetail/<%= productDatos.id %>'" id="cancel">Cancelar</button>
                    
                </div>
				<div class="linea"></div>
			</form>
		</div>
	</div>

	<!-- Footer -->
	<%- include('../partials/footer.ejs') %>
	<!-- /Footer -->
</body>	
</html>