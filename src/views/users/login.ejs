<!DOCTYPE html>
<html lang="es">
  <!-- Head -->
  <%- include('../partials/head.ejs', {title: 'Ingreso de usuario'}) %>
  <!-- /Head -->

    <body>
        <!-- Header -->
        <%- include('../partials/header.ejs') %>
        <!-- /Header -->

        <!-- Main (Login) -->
        <main class="container-main">
            <section class="container-users">
              
              <!-- Form (Login) -->
              <form class="users" action="/users/login" method="POST" >
                <fieldset class="login-access">
                  <legend>Iniciar sesión</legend>
                  <%  if (locals.error) { %>
                    <div class="text-danger"><%= error %></div>
                  <% } %>
                  <label for="user">Usuario: </label>
                  <input type="text" name="user" id="user" placeholder="Ingresar usuario" value="<%= locals.old && old.user ? old.user : '' %>">
                  <h8 id="userError" style= "margin-top: 5%;" class="text-danger" for="apellido"><%= locals.errors && errors.user ? errors.user.msg:"" %></h8>

                  <label for="password">Contraseña: </label>
                  <input type="password" name="password" id="password" placeholder="Ingresar contraseña"  />
                 <h8 id="passwordError" style= "margin-top: 25%;" class="text-danger" for="password"><%= locals.errors && errors.password ? errors.password.msg:"" %></h8>
                  <div class="linea"></div>
                    <input type="checkbox" name="recordame">Recordarme
                  <div class="media-linea"></div>                
                </fieldset>
                
                <div class="linea"></div>
                
                <div class="container-buttons">
                  <button class="container-buttons" type="submit" id="button-in">Ingresar</button>
                </div>

                <div class="linea"></div>
                <div class="media-linea"></div>

                <div class="container-link">
                  <p id="link"><a href="#"><span id="FrgtPass">¿olvidaste tu contraseña?</span></a></p>
                </div>

                <div class="linea"></div>
                <div class="media-linea"></div>

                <div class="container-link">
                  <p id="link"><a href="./register"> ¿No tenés una cuenta?<span id="IniSesion"> Registrate</span></a></p>
                </div>
              </form>
            </section>
        </main>

        <!-- Footer -->
        <%- include('../partials/footer.ejs') %>
        <!-- /Footer -->
    </body>
    <script src="/js/validationLogin.js"></script>
</html>