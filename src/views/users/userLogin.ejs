<!DOCTYPE html>
<html lang="es">
  <!-- Head -->
  <%- include('../partials/head.ejs', {title: 'Ingreso de usuario'}) %>
  <!-- /Head -->

    <body>
        <!-- Header -->
        <%- include('../partials/header.ejs', {user:user}) %>
        <!-- /Header -->

        <!-- Main (Login) -->
        <main class="container-main">
            <section class="container-users">
              
              <!-- Form (Login) -->
              <form class="users" action="/users/userLogin" method="POST" >
                <fieldset class="login-access">
                  <legend>Iniciar sesión</legend>
                   
                  <label for="user">Usuario: </label>
                  <input type="text" name="user" id="user" placeholder="Ingresar usuario" >
                  <%  if (locals.errors) {
                    for(let oneError in errors){ 
                      if(errors[oneError].param == "user"){%>
                        <p class="text-danger"><%= errors[oneError].msg %></p>
                  <% }}} %>

                  <label for="password">Contraseña: </label>
                  <input type="password" name="password" id="password" placeholder="Ingresar contraseña"  />
                    <%  if (locals.errors ) {
                      for(let oneError in errors){ 
                        if(errors[oneError].param == "password"){%>
                          <p  class="text-danger"><%= errors[oneError].msg %></p>
                    <% }}} %>                 
                </fieldset>
                <div class="linea"></div>
                
                <div class="container-buttons">
                  <button class="container-buttons" type="submit" id="button-in">Ingresar</button>
                </div>

                <div class="linea"></div>
                <div class="media-linea"></div>

                <div class="container-link">
                  <p id="link"><a href="#"><span id="FrgtPass">¿olvidaste tu contraseña?</span></a></p>
                </div>

                <div class="linea"></div>
                <div class="media-linea"></div>

                <div class="container-link">
                  <p id="link"><a href="./userRegister"> ¿No tenés una cuenta?<span id="IniSesion"> Registrate</span></a></p>
                </div>
              </form>
            </section>
        </main>

        <!-- Footer -->
        <%- include('../partials/footer.ejs') %>
        <!-- /Footer -->
    </body>
</html>