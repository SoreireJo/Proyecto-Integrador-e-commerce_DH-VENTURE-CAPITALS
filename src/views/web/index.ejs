<!DOCTYPE html>
<html lang="es">
    <!-- Head -->
    <%- include('../partials/head.ejs', {title: 'Inicio'}) %>
    <!-- /Head -->

    <body>
        <!-- Header -->
        <%- include('../partials/header.ejs') %>
        <!-- /Header -->

        <!-- Main (Productos) -->
        <main class="main-index">
            <div class="linea"></div>
            <h3 class="titulo-main-index">Tus últimas visitas</h3>
            <div class="bar-ccb" id="cc-bar"></div>
            <div class="linea"></div>
            
            <!-- Sección: Equipate con lo último en tecnología -->
            <section class="sec-last-tec">

                <div class="products">
            <% products.forEach(function(products){%>
                    <!-- Card -->
                    <article class="last-tec">
                        <a href="/products/detail/<%=products.id%>">
                            <div class="linea-blanca"></div>
                            <div class="main-card-img">
                                <img src="images/products/<%=products.image%>" alt="Benq Led Monitor 144hz" class="product_img">
                            </div>
                            <div class="linea-blanca"></div>
                        </a>
                        <div class="bar-ggr" id="gg-bar"></div>
                        <div class="main-article">
                            <p class="discount"><%=products.discount%>% off</p>
                            <p class="price">$<%=products.price%></p>
                            <span class="sell">
                                <button class="buttAgregar">
                                    <i class="fa-solid fa-cart-shopping" id="crtct" style="font-size: .8em;"></i> Agregar
                                </button>
                                <div class="media-linea"></div>
                                <button class="buttComprar">
                                    <a href="/products/detail/<%=products.id%>" class=" button buttComprar">Ver producto</a>
                                </button>

                            </span>
                            <h4 class="description"><%=products.name%></h4>
                        </div>
                    </article>
                    <% } )%>
                </div>
            </section>
            

            <div class="linea"></div>
            <div class="linea"></div>
            <div class="linea"></div>
            <h3 class="titulo-main-index">Ofertas</h3>
            <div class="bar-ccb" id"cc-bar"></div>
            <div class="linea"></div>
            
            <!-- Sección de Ofertas -->
            <section class="sec-offers">

                <div class="products">
                    <!-- Card -->
                    <% products.forEach(function(products){%>
                        <% if(products.discount > 0) { %>
                            <!-- Card -->
                            <article class="last-tec">
                                <a href="/products/detail/<%=products.id%>">
                                    <div class="linea-blanca"></div>
                                    <div class="main-card-img">
                                        <img src="images/products/<%=products.image%>" alt="Benq Led Monitor 144hz" class="product_img">
                                    </div>
                                    <div class="linea-blanca"></div>
                                </a>
                                <div class="bar-ggr" id="gg-bar"></div>
                                <div class="main-article">
                                    <p class="discount"><%=products.discount%>% off</p>
                                    <p class="price">$<%=products.price%></p>
                                    <span class="sell">
                                        <button class="buttAgregar">
                                            <i class="fa-solid fa-cart-shopping" id="crtct" style="font-size: .8em;"></i> Agregar
                                        </button>
                                        <div class="media-linea"></div>
                                        <button class="buttComprar">
                                            <a href="/products/detail/<%=products.id%>" class=" button buttComprar">Ver producto</a>
                                        </button>
        
                                    </span>
                                    <h4 class="description"><%=products.name%></h4>
                                </div>
                            </article>
                            <% } })%>
                </div>  
            </section>
        </main>

        <!-- Footer -->
        <%- include('../partials/footer.ejs') %>
        <!-- /Footer -->
    </body>
</html>